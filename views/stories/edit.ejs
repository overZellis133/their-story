<% include ../partials/header %>
    <div class="row">
        <h1>Edit <%= story.title %></h1>
        <div class="form-style">
            <form action="/stories/<%= story._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="story[title]" value="<%= story.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[youtubeID]" value="<%= story.youtubeID %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="story[description]"><%= story.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Submit</button>
                </div>
            </form>
            <a href="/stories/<%= story._id %>">Back to <%= story.title %></a>
        </div>
    </div>
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= story.title %></h1>
        <div class="form-style">
            <form action="/stories/<%= story._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Submit</button>
                </div>
            </form>
            <a href="/stories/<%= story._id %>">Back to <%= story.title %></a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
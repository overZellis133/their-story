<% include ../partials/header %>
        <header class="jumbotron">
            <div class="container">
                <h1>Their Stories</h1>
                <p>A collection of Ellis family stories and conversations</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/stories/new">Add New Story</a>
                </p>
            </div>
        </header>
    
        <ul>
            <% stories.forEach(function(story) { %>
                <li>
                    <h4>
                        <a href="/stories/<%= story._id %>"><%= story.title %></a>
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="videoWrapper">
                                <iframe src="https://youtube.com/embed/<%= story.youtubeID %>" allowfullscreen></iframe>
                            </div>
                            <p>
                                <em>Submitted by <%= story.author.username %>, <%= moment(story.createdAt).format("LL") %></em>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h4><%= story.description %></h4>
                            <a class="btn btn-success" href="/stories/<%= story._id %>">More Info</a>
                        </div>
                    </div>
                    <hr />
                </li>
            <% }); %>
        </ul>

<% include ../partials/footer %>

